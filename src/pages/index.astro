---
import BaseLayout from '../layouts/BaseLayout.astro';
import {LayoutDemo} from '../components/LayoutDemo.tsx';
---

<style is:global>
    .LayoutDemo {
        border-radius: 1em;

        & > div {
            background-color: white;
            border-radius: 1em;
        }
    }
</style>

<BaseLayout title="Astro + React Harness">
    <main>
        <h1>Astro + React Harness</h1>
        <p>Start your concept work here.</p>

        <section>
            <h2>Interactive React</h2>
            <LayoutDemo client:load/>
        </section>
    </main>
</BaseLayout>
